<!--pages/register/register.wxml-->
<view class="form-here">
 <view  class="hr" style="margin-top:5px;"></view>  
    <input class="form-password" value="{{email}}" bindchange='myemail' placeholder="请输入邮箱地址"/>
        
        <view class="hr" style="margin-top:5px;"></view>
        <input password maxlength="16" class="form-password" value="{{password}}" bindchange='mypassword' placeholder="请输入密码" />
        <view class="hr" style="margin-top:5px;"></view>
        <input password maxlength="16" class="form-password" value="{{repassword}}" bindchange='judgepassword' placeholder="请确认密码" />
       
        <view class="hr" style="margin-top:5px;"></view>
        <input class="form-password" value="{{authorization}}" bindchange='myauthorization' placeholder="请输入计科院授权码"/>
</view>
<view class="submit">
    <view class="agree">
      <checkbox color="#f9364f" value="点击注册" checked="true"/>点击注册，表示您同意西电计科学工 <text class="agreement" bindtap="severice">《服务协议》</text>
    </view>
    <button class="sub-button" bindtap="submit">注册</button>
</view>
