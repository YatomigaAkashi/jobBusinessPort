/* pages/list/lists.wxss */
page {
  background-color: #f4f4f4;
}
.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  color: #888888;
  font-size: 28rpx;
}
.item {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  border-bottom: 1px #f4f4f4 solid;
  position: relative;
}
.item-box {
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.job {
  padding-left: 40rpx;
  font-size: 50rpx;
  line-height: 80rpx;
}
.time {
  padding-left: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  color: #888888;
}
.operation {
  width: 300rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  -webkit-transform: translateX(300rpx);
  transform: translateX(300rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.delete {
  width: 50%;
  height: 100%;
  background-color: #e94f51;
  text-align: center;
}
.update {
  width: 50%;
  height: 100%;
  background-color: #f4f4f4;
  text-align: center;
}
.list-item-touch-active .item-box {
  margin-left: -300rpx; 
}
.list-item-touch-active .item-box, .list-item-touch-active operation {
  -webkit-transform: translateX(0) !important;
  transform: translateX(0rpx) !important;
}
.list-item-touch-active .operation {
  transform: translateX(0rpx);
}
.add-png {
  display: block;
  width: 72rpx;
  height: 72rpx;
  margin: 20rpx auto;
}