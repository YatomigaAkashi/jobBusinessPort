/* pages/enquire/enquire.wxss */
body {
  background-color: #E5E7ED;
}
.empty{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.empty .icon{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 190rpx;
    height: 190rpx;
    margin-top: 100rpx;
    border-radius: 50%;
    background: #d6d6d6;
}
.icon image{
    width: 80rpx;
    height: 80rpx;
}
.btn-warn,.prompt{
    margin-top: 80rpx;
}
.btn-warn{
    width: 580rpx;
    letter-spacing: 4rpx;
}
.content {
  width: 100%;
  height: 90%;
  position: fixed;
  top: 0;
}
.item-container {
  margin: 10rpx 20rpx;
  position: relative;
}

.desc {
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: left;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7ED;
}

.desc .right {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.desc .right {
  display: flex;
  flex-direction: column;
  align-items: right;
}


.release {
  width: 100%;
  height: 8%;
  position: fixed;
  bottom: 20rpx;
}

.release button {
  width: 95%;
  height: 100%;
  background-color: #39b5de;
  color: white;
}
