/* pages/enquire/enquire.wxss */
body {
  background-color: #E5E7ED;
}
.content {
  width: 100%;
  height: 90%;
  position: fixed;
  top: 0;
}
.item-container {
  margin: 10rpx 20rpx;
  position: relative;
}

.desc {
  margin: 10rpx 0;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  align-items: center;
  text-align: right;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7ED;
}

.desc .right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.release {
  width: 100%;
  height: 8%;
  position: fixed;
  bottom: 20rpx;
}

.release button {
  width: 95%;
  height: 100%;
  background-color: #39b5de;
  color: white;
}