/* pages/mine/login.wxss */

page{
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2
} 

/*登录图片*/
.login-icon{
  flex: none;
}
.login-img{
  width: 750rpx;
}

/*表单内容*/
.login-from {
  margin-top: 10rpx;
  flex: 1;
  height:100%;
  width: 95%;
}

/*输入框*/
.inputView {
  background-color: #fff;
  line-height: 88rpx;
  width: 100%;
  border: 1px solid #eee;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}

.nameImage, .keyImage {
  width: 28rpx;
  height: 28rpx
}
.loginLab {
  color: #545454;
  font-size: 28rpx;
}
.inputText {
  text-align: right;
  color: #000000;
  font-size: 40rpx
}
.line {
  width: 100%;
  height: 10rpx;
}

/*按钮*/
.loginBtnView {
  width: 70%;
  height: auto;
  margin: 0 auto;
  background-color: #f2f2f2;
}
/* 登录 */
.loginBtn {
  width: 100%;
  margin-top: 100rpx;
}

/* 底边栏 */
.botTab {
  width: 50%;
  height: 40rpx;
  position: absolute;
  bottom: 100rpx;
  left: 25%;
  right: 25%;
  display: flex;
  flex: row;
  justify-content: space-between;
}
.botTab view {
  color: #cccccc;
}
.botTab .botTabFlex {
  height: 40rpx;
}
