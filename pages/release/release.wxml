<!--pages/release/releae.wxml-->
<form bindsubmit='bindSubmit'>

  <view class="form-here">
    <input class="form-in" placeholder="请输入职位" name="job"/>
    
<view class="line"></view>
    <input class="form-in" placeholder="请输入薪金(单位为元)" name="money"/>
    
<view class="line"></view>
    <input class="form-in" placeholder="请输入联系方式(工作邮箱)" name="contact"/>
<view class="line"></view>
   
    <view class="section">
  <view class="section__title">招聘时间:</view>
  <picker mode="date" value="{{datef}}" start="2015-09-01" end="2032-09-01" bindchange="bindDateChange">
      起始日期: {{datef}}
  </picker>
  <picker mode="date" value="{{datel}}" start="2015-09-01" end="2032-09-01" bindchange="bindDateChange2">
      截止日期: {{datel}}
  </picker>
</view>
<view class="line"></view>  
     <view class="section">
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
  <view class="section__title">工作地点 :{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
  </picker>
</view>
    <view class="line"></view>
  </view>
  <view class="submit">
    <button class="sub-button" form-type='submit'>确认发布</button>
  </view>
</form>
