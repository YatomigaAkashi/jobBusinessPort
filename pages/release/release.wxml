<form bindsubmit='bindSubmit'>
  <view class="section section_gap">
    <view class="section__title">任职岗位</view>
    <input type='text' name="job"/>
  </view>
  <view class="section section_gap">
    <view class="section__title">任职要求</view>
    <textarea name="require" maxlength='{{maxlength}}' cursor-spacing='{{cursorSpacing}}' auto-height/>
  </view>
  <view class="section section_gap">
    <view class="section__title">任职内容</view>
    <textarea name="content" maxlength='{{maxlength}}' cursor-spacing='{{cursorSpacing}}' auto-height/>
  </view>
  <view class="section section_gap">
    <view class="section__title">任职地点</view>
    <input name="address" maxlength='{{maxlength}}' cursor-spacing='{{cursorSpacing}}' auto-height/>
  </view>
  <view class="section section_gap">
    <view class="section__title">任职待遇</view>
    <textarea name="treatment" maxlength='{{maxlength}}' cursor-spacing='{{cursorSpacing}}' auto-height/>
  </view>
  <view class="section section_gap">
    <view class="section__title">联系方式</view>
    <textarea name="contact" maxlength='{{maxlength}}' cursor-spacing='{{cursorSpacing}}' auto-height/>
  </view>
  <view class="section section_gap">
    <view class="section__title">发布人员</view>
    <input type='text' name="nickname"/>
  </view>
  <view class="btn-area">
    <button form-type="submit">提交</button>
  </view>
</form>
